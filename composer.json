{
    "name": "abdelhamiderrahmouni/vendorkill",
    "description": "a composer package to install globally and remove composer vendor folders in you old project to save storage.",
    "keywords": ["composer", "npkill", "vendor", "storage", "clean", "remove", "delete", "space", "disk", "free", "clear", "cleaner"],
    "homepage": "https://github.com/abdelhamiderrahmouni/vendorkill",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/abdelhamiderrahmouni/vendorkill/issues",
        "source": "https://github.com/abdelhamiderrahmouni/vendorkill"
    },
    "authors": [
        {
            "name": "Abdelhamid Errahmouni",
            "email": "abdelhamiderrahmouni@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "laminas/laminas-text": "^2.10",
        "laravel/prompts": "^0.1.15",
        "nunomaduro/termwind": "^1.15.1"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "laravel-zero/framework": "^10.2",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.22"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "pint": "./vendor/bin/pint",
        "pest": "./vendor/bin/pest"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/vendorkill"]
}
